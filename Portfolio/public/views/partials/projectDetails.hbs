<div class="projectDetailsPage">

    <div class="slideshow_container">
        {{#each projectData.popup_pics as |pic pic_index|}}
        <div class="slide" id="slide{{pic_index}}">
            <img class="card_pic" src="{{pic}}">
        </div>
        {{/each}}
        {{#each projectData.popup_pics as |pic pic_index|}}
        <span class="slide_dot" id="slide_dot{{pic_index}}"
            onclick="showSlide({{pic_index}})"></span>
        {{/each}}
    </div>
    
    <div class="information_container">
        <h1>{{{projectData.title}}}</h1>
        <h2>{{projectData.startDate}} - {{projectData.endDate}}</h2>
        <div>
            <h2>Information:</h2>
            <p>{{projectData.information}}</p>
        </div>
        <h2>Link: <a class="link" href="{{link}}" target="_blank">{{projectData.link}}</a></h2>
    </div>
</div>